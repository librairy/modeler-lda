<configuration scan="true" scanPeriod="30 seconds">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{15}) - %msg %n</pattern>
        </encoder>
    </appender>

    <logger name="org.librairy" level="INFO"/>
    <logger name="org.librairy.modeler" level="INFO"/>
    <logger name="org.librairy.metrics" level="INFO"/>
    <logger name="org.apache.spark" level="WARN"/>
    <logger name="org.springframework.data.neo4j.mapping.Neo4jPersistentProperty" level="ERROR"/>

    <root level="ERROR">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
